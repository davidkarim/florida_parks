<table class='dynamic'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parks.each do |park| %>
      <tr>
        <td><%= park.name %></td>
        <td><%= park.address %></td>
        <td><%= park.city %></td>
        <td><%= park.phone_number %></td>
        <td><%# link_to 'Show', park %></td>
        <td><%# link_to 'Edit', edit_park_path(park) %></td>
        <td><%# link_to 'Delete',
                park, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
